<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="dao.dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="org.h2.Driver" />
    <property name="url" value="${booklib.dao.dataSource.url}" />
    <property name="username" value="${booklib.dao.dataSource.username}" />
    <property name="password" value="${booklib.dao.dataSource.password}" />
  </bean>

  <bean id="dao.jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <property name="dataSource" ref="dao.dataSource"/>
  </bean>

  <bean id="dao.namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
    <constructor-arg ref="dao.dataSource"/>
  </bean>

  <!-- DAO beans -->

  <bean id="dao.bookDao" class="com.alexshabanov.booklib.service.BookDaoImpl">
    <constructor-arg ref="dao.jdbcTemplate" />
  </bean>

  <bean id="dao.namedValueDao" class="com.alexshabanov.booklib.service.NamedValueDaoImpl">
    <constructor-arg ref="dao.namedParameterJdbcTemplate" />
  </bean>
</beans>
