<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- TODO: use poolable connection in live app, move into DS bean into separate config (and use DriverManagerDataSource in tests) -->
  <bean id="dao.book.dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="org.h2.Driver" />
    <property name="url" value="${booklib.dao.book.dataSource.url}" />
    <property name="username" value="${booklib.dao.book.dataSource.username}" />
    <property name="password" value="${booklib.dao.book.dataSource.password}" />
  </bean>

  <bean id="dao.book.jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <property name="dataSource" ref="dao.book.dataSource"/>
  </bean>

  <!-- DAO beans -->

  <bean id="dao.book.bookDao" class="com.alexshabanov.booklib.service.BookDaoImpl">
    <constructor-arg ref="dao.book.jdbcTemplate" />
  </bean>

  <bean id="dao.book.namedValueDao" class="com.alexshabanov.booklib.service.NamedValueDaoImpl">
    <constructor-arg ref="dao.book.jdbcTemplate" />
  </bean>


  <!--
   User DB
  -->

  <!-- TODO: use poolable connection in live app, move into DS bean into separate config (and use DriverManagerDataSource in tests) -->
  <bean id="dao.user.dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="org.h2.Driver" />
    <property name="url" value="${booklib.dao.user.dataSource.url}" />
    <property name="username" value="${booklib.dao.user.dataSource.username}" />
    <property name="password" value="${booklib.dao.user.dataSource.password}" />
  </bean>

  <bean id="dao.user.jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
    <property name="dataSource" ref="dao.user.dataSource"/>
  </bean>

  <bean id="dao.user.userAccountDao" class="com.alexshabanov.booklib.service.UserAccountDaoImpl">
    <constructor-arg ref="dao.user.jdbcTemplate" />
  </bean>
</beans>
